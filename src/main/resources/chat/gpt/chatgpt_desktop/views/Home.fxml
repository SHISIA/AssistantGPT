            <AnchorPane fx:id="replyField" minHeight="0.0" minWidth="0.0" prefHeight="506.0" prefWidth="305.0" style="-fx-border-color: white; -fx-background-color: #1A1A1A; -fx-background-radius: 22; -fx-border-radius: 22;" />
